<?xml version="1.0" encoding="utf-8" ?>
<Project TreatAsLocalProperty="_TaskAssembly">

  <PropertyGroup>
    <_TaskAssembly Condition=" '$(MSBuildRuntimeType)' != 'Core' ">$(MSBuildThisFileDirectory)../tools/net472/sdgenman.exe</_TaskAssembly>
    <_TaskAssembly Condition=" '$(MSBuildRuntimeType)' == 'Core' ">$(MSBuildThisFileDirectory)../tools/netcoreapp3.1/sdgenman.dll</_TaskAssembly>
    <_TaskAssembly>$([MSBuild]::NormalizePath('$(_TaskAssembly)'))</_TaskAssembly>
  </PropertyGroup>

  <UsingTask AssemblyFile="$(_TaskAssembly)" TaskName="$(MSBuildThisFileName).GenerateStreamDeckManifestToolTask" />

</Project>