    <PackageReference Include="Parithon.StreamDeck.SDK" Version="1.0.0-build-*" />
  </ItemGroup>

  <ItemGroup>
    <AssemblyAttribute Include="Parithon.StreamDeck.SDK.AssemblyStreamDeckAttribute" Icon="Images/virt_cam_on" Category="Testing" />
