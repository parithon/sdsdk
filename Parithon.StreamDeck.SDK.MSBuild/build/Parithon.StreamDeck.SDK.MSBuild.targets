<Project>

  <PropertyGroup>
    <_BuildAssembly>$(MSBuildThisFileDirectory)sdsdkbuildtool.dll</_BuildAssembly>
  </PropertyGroup>
  
  <Target Name="GenerateStreamDeckManifest" AfterTargets="Build">
    <Exec Command='dotnet "$(_BuildAssembly)" "$(TargetPath)"' />
  </Target>

  <Target Name="ClientStreamDeckManifest" AfterTargets="Clean">
    <Delete Files="$(OutDir)\manifest.json" />
  </Target>

</Project>